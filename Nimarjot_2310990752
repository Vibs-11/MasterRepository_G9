import tkinter as tk
from math import sqrt

def multiplication():
    num1 = float(entry1.get())
    num2 = float(entry2.get())
    mul = num1 * num2
    result_label.config(text="Multiplication of the two numbers is :: " + str(mul))
    process_label.config(text="Process: " + str(num1) + " * " + str(num2) + " = " + str(mul))

def division():
    num1 = float(entry1.get())
    num2 = float(entry2.get())
    if num2 != 0:
        div = num1 / num2
        result_label.config(text="Division of the two numbers is :: " + str(div))
        process_label.config(text="Process: " + str(num1) + " / " + str(num2) + " = " + str(div))
    else:
        result_label.config(text="Error! Division by zero.")
        process_label.config(text="")

def square_root():
    num1 = float(entry1.get())
    result = sqrt(num1)
    result_label.config(text="Square root of the number is :: " + str(result))
    process_label.config(text="Process: âˆš" + str(num1) + " = " + str(result))

def exponent():
    num1 = float(entry1.get())
    num2 = float(entry2.get())
    exp = num1 ** num2
    result_label.config(text="Exponentiation of the two numbers is :: " + str(exp))
    process_label.config(text="Process: " + str(num1) + " ^ " + str(num2) + " = " + str(exp))

# Create main window
root = tk.Tk()
root.title("Calculator")

# Create labels
label1 = tk.Label(root, text="Enter the first number:")
label1.grid(row=0, column=0)

label2 = tk.Label(root, text="Enter the second number:")
label2.grid(row=1, column=0)

result_label = tk.Label(root, text="")
result_label.grid(row=5, column=0, columnspan=2)

process_label = tk.Label(root, text="")
process_label.grid(row=6, column=0, columnspan=2)

# Create entry fields
entry1 = tk.Entry(root)
entry1.grid(row=0, column=1)

entry2 = tk.Entry(root)
entry2.grid(row=1, column=1)

# Create buttons
multiply_button = tk.Button(root, text="Multiply", command=multiplication)
multiply_button.grid(row=2, column=0)

divide_button = tk.Button(root, text="Divide", command=division)
divide_button.grid(row=2, column=1)

sqrt_button = tk.Button(root, text="Square Root", command=square_root)
sqrt_button.grid(row=3, column=0)

exponent_button = tk.Button(root, text="Exponent", command=exponent)
exponent_button.grid(row=3, column=1)

root.mainloop()
