import tkinter as tk
from math import sqrt

def multiplication():
    num1 = int(entry_num1.get())
    num2 = int(entry_num2.get())
    result = num1 * num2
    label_result.config(text="Multiplication of the two numbers is :: " + str(result))

def division():
    num1 = int(entry_num1.get())
    num2 = int(entry_num2.get())
    if num2 != 0:
        result = num1 / num2
        label_result.config(text="Division of the two numbers is :: " + str(result))
    else:
        label_result.config(text="Error! Division by zero is not allowed.")

def subtraction():
    num1 = int(entry_num1.get())
    num2 = int(entry_num2.get())
    result = num1 - num2
    label_result.config(text="Subtraction of the two numbers is :: " + str(result))

def exponent():
    num1 = int(entry_num1.get())
    num2 = int(entry_num2.get())
    result = num1 ** num2
    label_result.config(text="Exponentiation of the two numbers is :: " + str(result))

def square_root():
    num1 = int(entry_num1.get())
    result = sqrt(num1)
    label_result.config(text="Square root of the number is :: " + str(result))

# Create a new Tkinter window
window = tk.Tk()
window.title("Calculator")

# Create input fields for numbers
label_num1 = tk.Label(window, text="Enter the first number:")
label_num1.pack()
entry_num1 = tk.Entry(window)
entry_num1.pack()

label_num2 = tk.Label(window, text="Enter the second number:")
label_num2.pack()
entry_num2 = tk.Entry(window)
entry_num2.pack()

# Create buttons for operations
button_multiply = tk.Button(window, text="Multiply", command=multiplication)
button_multiply.pack()

button_divide = tk.Button(window, text="Divide", command=division)
button_divide.pack()

button_subtract = tk.Button(window, text="Subtract", command=subtraction)
button_subtract.pack()

button_exponent = tk.Button(window, text="Exponent", command=exponent)
button_exponent.pack()

button_square_root = tk.Button(window, text="Square Root", command=square_root)
button_square_root.pack()

# Create a label to display the result
label_result = tk.Label(window, text="")
label_result.pack()

# Run the Tkinter event loop
window.mainloop()
