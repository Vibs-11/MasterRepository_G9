import tkinter as tk
from tkinter import ttk
import math

def multiplication(num1, num2):
    result = num1 * num2
    result_label.config(text="Result: " + str(result))

def division(num1, num2):
    result = num1 / num2
    result_label.config(text="Result: " + str(result))

def subtraction(num1, num2):
    result = num1 - num2
    result_label.config(text="Result: " + str(result))

def exponential(num1, num2):
    result = num1 ** num2
    result_label.config(text="Result: " + str(result))

def log(num1):
    result = math.log(num1)
    result_label.config(text="Result: " + str(result))

def sin(num1):
    result = math.sin(math.radians(num1))
    result_label.config(text="Result: " + str(result))

def sin_inverse(num1):
    if -1 <= num1 <= 1:
        result = math.degrees(math.asin(num1))
        result_label.config(text="Result: " + str(result))
    else:
        result_label.config(text="Invalid input for sin inverse function.")

def calculate():
    num1 = float(entry_num1.get())
    num2 = float(entry_num2.get())
    operation = operation_var.get()

    if operation == 1:
        multiplication(num1, num2)
    elif operation == 2:
        division(num1, num2)
    elif operation == 3:
        subtraction(num1, num2)
    elif operation == 4:
        exponential(num1, num2)
    elif operation == 5:
        log(num1)
    elif operation == 6:
        sin(num1)
    elif operation == 7:
        sin_inverse(num1)
    else:
        result_label.config(text="Invalid operation selected.")
root = tk.Tk()
root.title("Scientific Calculator")
style = ttk.Style()
style.configure('TButton', font=('calibri', 12, 'bold'), foreground='black', background='lightblue')
style.configure('TLabel', font=('calibri', 12), foreground='black', background='lightblue')
style.configure('TEntry', font=('calibri', 12), foreground='black', background='lightyellow')
input_frame = ttk.Frame(root, borderwidth=2, relief="solid")
input_frame.pack(padx=10, pady=5)

entry_num1 = ttk.Entry(input_frame)
entry_num1.pack(pady=5)

entry_num2 = ttk.Entry(input_frame)
entry_num2.pack(pady=5)
operation_var = tk.IntVar()
operations = ["Multiplication", "Division", "Subtraction", "Exponential", "Log", "Sin", "Sin Inverse"]
for idx, op in enumerate(operations, start=1):
    ttk.Radiobutton(root, text=op, variable=operation_var, value=idx).pack(anchor=tk.W)

calculate_button = ttk.Button(root, text="Calculate", command=calculate)
calculate_button.pack(pady=10)

result_label = ttk.Label(root, text="Result: ")
result_label.pack(pady=5)
root.mainloop()
