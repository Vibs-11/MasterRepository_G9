import tkinter as tk

def perform_operation():
    num1 = int(entry_num1.get())
    num2 = int(entry_num2.get())
    operation = int(selected_operation.get())
    
    if operation == 1:
        result = num1 * num2
    elif operation == 2:
        result = num1 / num2
    elif operation == 3:
        result = num1 - num2
    elif operation == 4:
        result = num1 ** num2
    else:
        result = "Invalid operation"
    
    result_label.config(text="Result: " + str(result))

# Create the main window
root = tk.Tk()
root.title("Calculator")

# Create input labels
label_num1 = tk.Label(root, text="Enter the first number:")
label_num1.grid(row=0, column=0)
entry_num1 = tk.Entry(root)
entry_num1.grid(row=0, column=1)

label_num2 = tk.Label(root, text="Enter the second number:")
label_num2.grid(row=1, column=0)
entry_num2 = tk.Entry(root)
entry_num2.grid(row=1, column=1)

label_operation = tk.Label(root, text="Select operation:")
label_operation.grid(row=2, column=0)
selected_operation = tk.StringVar(root)
selected_operation.set("1") # Default value
operation_options = [("Multiplication", 1), ("Division", 2), ("Subtraction", 3), ("Exponent", 4)]
for text, value in operation_options:
    tk.Radiobutton(root, text=text, variable=selected_operation, value=value).grid(row=2, column=value)

# Create a button to trigger the calculation
calculate_button = tk.Button(root, text="Calculate", command=perform_operation)
calculate_button.grid(row=3, columnspan=2)

# Create a label to display the result
result_label = tk.Label(root, text="")
result_label.grid(row=4, columnspan=2)

# Start the GUI event loop
root.mainloop()
